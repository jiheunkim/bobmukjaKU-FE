<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ChatFragment"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/content_search"
            android:layout_width="320dp"
            android:layout_height="47dp"
            android:background="@drawable/btn_search"
            android:ems="10"
            android:hint="모집방 검색"
            android:textSize="15sp"
            android:lines="1"
            android:drawableStart="@drawable/magnifier"
            android:drawablePadding="10dp"
            android:fontFamily="@font/notosans_semibold"
            android:textColorHint="#737373"
            android:paddingLeft="15dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/send_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/alarm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/line_gray"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/sortBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="5dp"
                    android:drawablePadding="-15dp"
                    android:drawableStart="@drawable/sort"
                    android:text="최신순"
                    android:fontFamily="@font/notosans_bold"
                    android:backgroundTint="@color/gray"
                    android:background="@drawable/btn_circle_gray" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/ttBtn"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="시간표 OFF"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans_semibold"
                    android:backgroundTint="@color/gray"
                    android:background="@drawable/btn_circle_gray" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/timeBtn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="날짜"
                    android:fontFamily="@font/notosans_semibold"
                    android:background="@drawable/btn_circle_gray" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/foodBtn"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="음식종류"
                    android:fontFamily="@font/notosans_semibold"
                    android:background="@drawable/btn_circle_gray" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/personBtn"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:text="인원"
                    android:fontFamily="@font/notosans_semibold"
                    android:background="@drawable/btn_circle_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="ex"
                    android:textColor="@color/white"/>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:id="@+id/dateFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/today"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="12dp"
                android:text="오늘"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/tomorrow"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="내일"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/otherDate"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="기타"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/personFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P2"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="12dp"
                android:text="2명"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P3"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="3명"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P4"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="4명"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P5"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="5명"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/P6"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="6명"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/foodFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/KoreaF"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="12dp"
                android:text="한식"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/JapanF"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="일식"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ForeignF"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="양식"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ChinaF"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="중식"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/ectF"
                android:layout_width="65dp"
                android:layout_height="26dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="12dp"
                android:text="기타"
                android:fontFamily="@font/notosans_bold"
                android:backgroundTint="#F5F5F5"
                android:background="@drawable/btn_circle_gray" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingVertical="10dp"
            android:text="참여 중인 모집방"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:fontFamily="@font/notosans_bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/join_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:text="전체 모집방"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:fontFamily="@font/notosans_bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/openRoomBtn"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:text="모집방 개설"
                android:fontFamily="@font/notosans_bold"
                android:background="@drawable/btn_circle_gray" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="365dp"
            android:layout_weight="1">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </ScrollView>
    </LinearLayout>

</LinearLayout>